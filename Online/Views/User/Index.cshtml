@model List<Users>

@{
    ViewData["Title"] = "Students";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/detail_student.css" />
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                Student Details
            </div>

            <div class="students-container">

                <!-- Alert if no students are available -->
                @if (!Model.Any())
                {
                    <div class="alert alert-warning text-center">
                        No students added
                    </div>
                }
                else
                {
                    <div class="students-list">
                        @foreach (var student in Model)
                        {
                            <div class="student-item">
                                <div class="student-info">
                                    <p><strong>Name:</strong> @student.FirstName</p>
                                    <p><strong>ID:</strong> @student.Id</p>
                                    <p><strong>Email:</strong> @student.Email</p>
                                    <p><strong>Date Registered:</strong> @student.BirthDate.ToString("yyyy-MM-dd")</p>
                                </div>

                                <div class="student-actions">
                                    <a asp-action="Edit" asp-controller="Student" asp-route-id="@student.Id" class="btn btn-success">
                                        Edit
                                    </a>
                                </div>

                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>

